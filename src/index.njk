---
title: "Home"
layout: base.njk
---

<!-- Hero Section -->
<section class="hero-section">
  <div class="hero-bg">
    <img src="{{ trending[0].image }}" alt="{{ trending[0].title }}" loading="lazy">
    <div class="hero-overlay"></div>
  </div>
  <div class="hero-text">
    <span class="category {{ trending[0].tag | lower }}">{{ trending[0].tag }}</span>
    <h1>{{ trending[0].title }}</h1>
    <p>{{ trending[0].description }}</p>
  </div>
</section>

<!-- Trending Now -->
<section class="trending-section container">
  <div class="trending-left">
    <h2 class="section-title">Trending Now</h2>

    {% for article in trending.slice(0, 4) %}
    <article class="trending-article">
      <img src="{{ article.image }}" alt="{{ article.title }}" loading="lazy">
      <div class="trending-content">
        <span class="category {{ article.tag | lower }}">{{ article.tag }}</span>
        <span class="date">{{ article.date }}</span>
        <h3><a href="{{ article.url }}">{{ article.title }}</a></h3>
        <p>{{ article.description }}</p>
      </div>

      <!-- Inert full body for modal -->
      <template class="article-body">
        {{ (article.body or article.description) | safe }}
      </template>
    </article>
    {% endfor %}

    <!-- Ad Slot -->
    {% include "ad-slot.njk" %}
  </div>

  <!-- Sidebar -->
  <aside class="trending-sidebar">
    {% include "sidebar.njk" %}
  </aside>
</section>

<!-- World News Section -->
<section class="world-news container">
  <h2 class="section-title">World News</h2>
  <div class="grid-2">
    {% for article in worldnews.slice(0, 6) %}
    <article class="post-card">
      <img src="{{ article.image }}" alt="{{ article.title }}" loading="lazy">
      <div class="card-content">
        <span class="category world">{{ article.tag }}</span>
        <h3><a href="{{ article.url }}">{{ article.title }}</a></h3>
        <p>{{ article.description }}</p>
      </div>

      <!-- Inert full body for modal -->
      <template class="article-body">
        {{ (article.body or article.description) | safe }}
      </template>
    </article>
    {% endfor %}
  </div>
  {% include "ad-slot.njk" %}
</section>

<!-- Tech Section -->
<section class="tech-section container">
  <h2 class="section-title">Tech</h2>
  <div class="grid-3">
    {% for article in tech.slice(0, 3) %}
    <article class="post-card">
      <img src="{{ article.image }}" alt="{{ article.title }}" loading="lazy">
      <div class="card-content">
        <span class="category tech">{{ article.tag }}</span>
        <h3><a href="{{ article.url }}">{{ article.title }}</a></h3>
        <p>{{ article.description }}</p>
      </div>

      <!-- Inert full body for modal -->
      <template class="article-body">
        {{ (article.body or article.description) | safe }}
      </template>
    </article>
    {% endfor %}
  </div>
</section>

<!-- Culture Section (2/3 + 1/3 layout) -->
<section class="culture-section container two-col">
  <div class="content-2-3">
    <h2 class="section-title">Culture</h2>
    {% for article in culture.slice(0, 5) %}
    <article class="trending-article">
      <img src="{{ article.image }}" alt="{{ article.title }}" loading="lazy">
      <div class="trending-content">
        <span class="category {{ article.tag | lower }}">{{ article.tag }}</span>
        <span class="date">{{ article.date }}</span>
        <h3><a href="{{ article.url }}">{{ article.title }}</a></h3>
        <p>{{ article.description }}</p>
      </div>

      <!-- Inert full body for modal -->
      <template class="article-body">
        {{ (article.body or article.description) | safe }}
      </template>
    </article>
    {% endfor %}
  </div>

  <!-- Sidebar -->
  <aside class="sidebar-1-3">
    <!-- Sports Widget -->
    <div class="sports-widget">
      <h3 class="section-title">Sports</h3>
      <div class="article-list-condensed">
        {% for article in Sportsp.slice(0, 4) %}
        <article class="trending-article">
          <img src="{{ article.image }}" alt="{{ article.title }}" loading="lazy">
          <div class="trending-content">
            <span class="category sports">{{ article.tag | default('Sports') }}</span>
            <span class="date">{{ article.date }}</span>
            <h3><a href="{{ article.url }}">{{ article.title }}</a></h3>
          </div>

          <!-- Inert full body for modal -->
          <template class="article-body">
            {{ (article.body or article.description) | safe }}
          </template>
        </article>
        {% endfor %}
      </div>
    </div>

    <!-- Arts Widget -->
    <div class="arts-widget">
      <h3 class="section-title">Arts</h3>
      <div class="arts-list">
        {% for highlight in arts.slice(0, 3) %}
        <article class="trending-article">
          <div class="trending-content">
            <span class="category {{ highlight.tag | lower }}">{{ highlight.tag }}</span>
            <span class="date">{{ highlight.date }}</span>
            <h3><a href="{{ highlight.url }}">{{ highlight.title }}</a></h3>
            <p>{{ highlight.description }}</p>
          </div>

          <!-- Inert full body for modal -->
          <template class="article-body">
            {{ (highlight.body or highlight.description) | safe }}
          </template>
        </article>
        {% endfor %}
      </div>
    </div>
  </aside>
</section>

<!-- Ad Slot -->
<section class="ad-section container">
  {% include "ad-slot.njk" %}
</section>
